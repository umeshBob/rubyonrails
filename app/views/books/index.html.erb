<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Location</th>
      <th>Description</th>
      <th>Cat1</th>
      <th>Cat2</th>
      <th>Subcat</th>
      <th>Price</th>
      <th>Mobile</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.city %></td>
        <td><%= book.location %></td>
        <td><%= book.description %></td>
        <td><%= book.cat1 %></td>
        <td><%= book.cat2 %></td>
        <td><%= book.subcat %></td>
        <td><%= book.price %></td>
        <td><%= book.mobile %></td>
        <td><%= book.email %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

